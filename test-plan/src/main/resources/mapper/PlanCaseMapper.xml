<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ruoyi.plan.mapper.PlanCaseMapper">

    <resultMap type="PlanCase" id="TestPlanCaseResult">
        <result property="testPlanId"    column="test_plan_id"    />
        <result property="testCaseId"    column="test_case_id"    />
    </resultMap>
    <delete id="deletePlanCaseByPlanId" parameterType="Long">
        delete from test_plan_case where test_plan_id = #{id}
    </delete>
    <delete id="deletePlanCaseByPlanIds" parameterType="Long">
        delete from test_plan_case  where test_plan_id in
        <foreach collection="array" item="planId" open="(" separator="," close=")">
            #{planId}
        </foreach>
    </delete>

    <select id="countPlanCaseById" resultType="Integer">
        select count(1) from test_plan_case where test_plan_id=#{testPlanId}
    </select>



</mapper>