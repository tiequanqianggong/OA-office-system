<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ruoyi.plan.mapper.PlanProjectMapper">
    <resultMap id="ProjectVOMap" type="com.ruoyi.plan.domain.vo.PlanProjectVO">
        <id property="projectId" column="project_id"/>
        <result property="projectName" column="project_name"/>
    </resultMap>
    <select id="selectProjectNameByPlanId" parameterType="Long" resultMap="ProjectVOMap">
        SELECT p.project_id, p.project_name
        FROM project p
                 JOIN test_plan_project up ON p.project_id = up.project_id
        WHERE up.test_plan_id= #{planId};
    </select>

    <select id="selectCountProject" parameterType="Long" resultType="boolean">
        SELECT COUNT(project_id) FROM project WHERE project_id = #{projectId}
    </select>

    <insert id="insertPlanProject" parameterType="PlanProject">
        INSERT INTO test_plan_project (test_plan_id, project_id)
        VALUES (#{testPlanId}, #{projectId})
    </insert>

    <update id="updatePlanProject" parameterType="PlanProject">
        UPDATE test_plan_project SET project_id = (#{projectId})
                                 WHERE test_plan_id = (#{testPlanId})
    </update>

    <delete id="deletePlanProject" parameterType="Long">
        delete from test_plan_project where test_plan_id in
        <foreach item="testPlanId" collection="array" open="(" separator="," close=")">
            #{testPlanId}
        </foreach>
    </delete>

</mapper>